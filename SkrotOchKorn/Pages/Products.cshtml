@page
@model SkrotOchKorn.Pages.ProductsModel
@{
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


<div class="grid-container">
    <div class="item3 productfont Main_background">Main
        <div class="flex-container">
                @for (int i = 0; i < 3; i++)
                {
                    <div>
                        <table>
                            <tr>
                            <th><img class="productimagesize" src="@Model.ProductImg[i]" /></th>
                            </tr>

                            <tr>
                                <th>Namn: </th>
                                <td>@Model.ProductName[i]</td>
                            </tr>
                            <tr>
                                <th>Pris: </th>
                                <td>@Model.ProductPrice[i].ToString("N0") Kr</td>
                            </tr>
                            <tr>
                                <th>TotalPris: </th>
                            <td>@((Model.ProductPrice[i] * 1.3).ToString("N0")) Kr</td>
                            </tr>
                            <tr>
                                <th>HästKrafter: </th>
                            <td>@Model.HorsePower[i]</td>
                            </tr>
                            <tr>
                                <th>Lastvikt: </th>
                            <td>@Model.CarryCapcity[i] Kg</td>
                            </tr>
                        </table>
                    </div>
                }
        </div>
    </div>
    <div class="item4">Right</div>
    </div>
</div>